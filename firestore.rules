rules_version = '2';

/**
 * Firestore Security Rules for Sportsblock
 *
 * Deploy via: firebase deploy --only firestore:rules
 */

service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================
    // HELPER FUNCTIONS
    // ============================================

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function validString(field, maxLen) {
      return field is string && field.size() <= maxLen;
    }

    // ============================================
    // ANALYTICS (Read-only for clients)
    // ============================================

    // Analytics data is written by server-side cron jobs using Firebase Admin SDK
    // which bypasses these rules. Clients can only read.
    match /analytics/{document=**} {
      allow read: if true;
      allow write: if false; // Only Admin SDK can write
    }

    // ============================================
    // USER PROFILES
    // ============================================

    match /profiles/{userId} {
      allow read: if true;
      allow create: if isOwner(userId) &&
        validString(request.resource.data.username, 50);
      allow update: if isOwner(userId) &&
        // Prevent changing the userId
        request.resource.data.userId == resource.data.userId;
      allow delete: if isOwner(userId);
    }

    // ============================================
    // SOFT POSTS (Firebase-only posts for soft auth users)
    // ============================================

    match /soft_posts/{postId} {
      allow read: if true;
      allow create: if isAuthenticated() &&
        request.resource.data.authorId == request.auth.uid &&
        validString(request.resource.data.title, 500) &&
        validString(request.resource.data.body, 100000);
      allow update: if isAuthenticated() &&
        resource.data.authorId == request.auth.uid;
      allow delete: if isAuthenticated() &&
        resource.data.authorId == request.auth.uid;
    }

    // ============================================
    // BOOKMARKS
    // ============================================

    match /bookmarks/{bookmarkId} {
      allow read: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() &&
        request.resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;
      allow update: if false;
    }

    // ============================================
    // NOTIFICATIONS
    // ============================================

    match /notifications/{notificationId} {
      allow read: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;
      // Users can only mark as read
      allow update: if isAuthenticated() &&
        resource.data.userId == request.auth.uid &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read', 'readAt']);
      allow delete: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;
      allow create: if false; // Server-side only via Admin SDK
    }

    // ============================================
    // USER SETTINGS (Private)
    // ============================================

    match /user_settings/{userId} {
      allow read, write: if isOwner(userId);
    }

    // ============================================
    // DRAFTS (Private)
    // ============================================

    match /drafts/{draftId} {
      allow read: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() &&
        request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;
    }

    // ============================================
    // DEFAULT DENY
    // ============================================

    match /{document=**} {
      allow read, write: if false;
    }
  }
}

