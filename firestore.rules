rules_version = '2';

/**
 * Firestore Security Rules for Sportsblock
 *
 * Deploy via: firebase deploy --only firestore:rules
 */

service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================
    // HELPER FUNCTIONS
    // ============================================

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function validString(field, maxLen) {
      return field is string && field.size() <= maxLen;
    }

    // ============================================
    // ANALYTICS (Read-only for clients)
    // ============================================

    // Analytics data is written by server-side cron jobs using Firebase Admin SDK
    // which bypasses these rules. Clients can only read.
    match /analytics/{document=**} {
      allow read: if true;
      allow write: if false; // Only Admin SDK can write
    }

    // ============================================
    // USER PROFILES
    // ============================================

    match /profiles/{userId} {
      allow read: if true;
      allow create: if isOwner(userId) &&
        validString(request.resource.data.username, 50);
      allow update: if isOwner(userId) &&
        // Prevent changing the userId
        request.resource.data.userId == resource.data.userId;
      allow delete: if isOwner(userId);
    }

    // ============================================
    // SOFT POSTS (Firebase-only posts for soft auth users)
    // ============================================

    match /soft_posts/{postId} {
      allow read: if true;
      allow create: if isAuthenticated() &&
        request.resource.data.authorId == request.auth.uid &&
        validString(request.resource.data.title, 500) &&
        validString(request.resource.data.content, 100000);
      allow update: if isAuthenticated() &&
        resource.data.authorId == request.auth.uid;
      allow delete: if isAuthenticated() &&
        resource.data.authorId == request.auth.uid;
    }

    // ============================================
    // SOFT COMMENTS
    // ============================================

    match /soft_comments/{commentId} {
      allow read: if true;
      allow create: if isAuthenticated() &&
        request.resource.data.authorId == request.auth.uid &&
        validString(request.resource.data.body, 10000);
      allow update: if isAuthenticated() &&
        resource.data.authorId == request.auth.uid;
      allow delete: if isAuthenticated() &&
        resource.data.authorId == request.auth.uid;
    }

    // ============================================
    // SOFT LIKES
    // ============================================

    match /soft_likes/{likeId} {
      allow read: if true;
      allow create: if isAuthenticated() &&
        request.resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;
      allow update: if false;
    }

    // ============================================
    // SOFT FOLLOWS
    // ============================================

    match /soft_follows/{followId} {
      allow read: if true;
      allow create: if isAuthenticated() &&
        request.resource.data.followerId == request.auth.uid;
      allow delete: if isAuthenticated() &&
        resource.data.followerId == request.auth.uid;
      allow update: if false;
    }

    // ============================================
    // SOFT NOTIFICATIONS
    // ============================================

    match /soft_notifications/{notificationId} {
      allow read: if isAuthenticated() &&
        resource.data.recipientId == request.auth.uid;
      allow update: if isAuthenticated() &&
        resource.data.recipientId == request.auth.uid &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read', 'readAt']);
      allow delete: if isAuthenticated() &&
        resource.data.recipientId == request.auth.uid;
      allow create: if false; // Server-side only via Admin SDK
    }

    // ============================================
    // BOOKMARKS
    // ============================================

    match /bookmarks/{bookmarkId} {
      allow read: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() &&
        request.resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;
      allow update: if false;
    }

    // ============================================
    // NOTIFICATIONS
    // ============================================

    match /notifications/{notificationId} {
      allow read: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;
      // Users can only mark as read
      allow update: if isAuthenticated() &&
        resource.data.userId == request.auth.uid &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read', 'readAt']);
      allow delete: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;
      allow create: if false; // Server-side only via Admin SDK
    }

    // ============================================
    // USER SETTINGS (Private)
    // ============================================

    match /user_settings/{userId} {
      allow read, write: if isOwner(userId);
    }

    // ============================================
    // DRAFTS (Private)
    // ============================================

    match /drafts/{draftId} {
      allow read: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() &&
        request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;
    }

    // ============================================
    // COMMUNITIES
    // ============================================

    // Helper function to check if user is a community admin
    function isCommunityAdmin(communityId) {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/community_members/$(communityId + '_' + request.auth.uid)) &&
        get(/databases/$(database)/documents/community_members/$(communityId + '_' + request.auth.uid)).data.role == 'admin' &&
        get(/databases/$(database)/documents/community_members/$(communityId + '_' + request.auth.uid)).data.status == 'active';
    }

    // Helper function to check if user is a community moderator or admin
    function isCommunityModerator(communityId) {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/community_members/$(communityId + '_' + request.auth.uid)) &&
        get(/databases/$(database)/documents/community_members/$(communityId + '_' + request.auth.uid)).data.role in ['admin', 'moderator'] &&
        get(/databases/$(database)/documents/community_members/$(communityId + '_' + request.auth.uid)).data.status == 'active';
    }

    // Helper function to check if user is an active community member
    function isCommunityMember(communityId) {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/community_members/$(communityId + '_' + request.auth.uid)) &&
        get(/databases/$(database)/documents/community_members/$(communityId + '_' + request.auth.uid)).data.status == 'active';
    }

    match /communities/{communityId} {
      // Anyone can read public communities; private/invite-only require membership
      allow read: if resource.data.type == 'public' || isCommunityMember(communityId);
      
      // Create: authenticated users can create communities
      allow create: if isAuthenticated() &&
        request.resource.data.createdBy == request.auth.uid &&
        validString(request.resource.data.name, 100) &&
        validString(request.resource.data.slug, 50) &&
        validString(request.resource.data.about, 500) &&
        request.resource.data.type in ['public', 'private', 'invite-only'];
      
      // Update: only admins can update
      allow update: if isCommunityAdmin(communityId) &&
        // Cannot change createdBy or slug after creation
        request.resource.data.createdBy == resource.data.createdBy &&
        request.resource.data.slug == resource.data.slug;
      
      // Delete: only the creator (first admin) can delete
      allow delete: if isAuthenticated() && 
        resource.data.createdBy == request.auth.uid;
    }

    // ============================================
    // COMMUNITY MEMBERS
    // ============================================

    match /community_members/{memberId} {
      // Members can read their own membership; admins/mods can read all members
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        isCommunityModerator(resource.data.communityId)
      );
      
      // Users can create their own membership (join request)
      allow create: if isAuthenticated() &&
        request.resource.data.userId == request.auth.uid &&
        request.resource.data.role == 'member' &&
        request.resource.data.status in ['active', 'pending'];
      
      // Admins/mods can update membership (approve, change role, ban)
      // Users can only update their own membership to leave (delete is preferred)
      allow update: if isAuthenticated() && (
        isCommunityModerator(resource.data.communityId) ||
        (resource.data.userId == request.auth.uid && 
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status']))
      );
      
      // Users can delete their own membership (leave); admins can remove members
      allow delete: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        isCommunityAdmin(resource.data.communityId)
      );
    }

    // ============================================
    // COMMUNITY INVITES
    // ============================================

    match /community_invites/{inviteId} {
      // Invitee or community admins/mods can read invites
      allow read: if isAuthenticated() && (
        resource.data.invitedEmail == request.auth.token.email ||
        isCommunityModerator(resource.data.communityId)
      );
      
      // Only admins/mods can create invites
      allow create: if isAuthenticated() &&
        request.resource.data.invitedBy == request.auth.uid &&
        request.resource.data.status == 'pending';
      
      // Invitee can accept/decline; admins can cancel
      allow update: if isAuthenticated() && (
        (resource.data.invitedEmail == request.auth.token.email &&
         request.resource.data.status in ['accepted', 'declined']) ||
        isCommunityAdmin(resource.data.communityId)
      );
      
      // Only admins can delete invites
      allow delete: if isCommunityAdmin(resource.data.communityId);
    }

    // ============================================
    // DEFAULT DENY
    // ============================================

    match /{document=**} {
      allow read, write: if false;
    }
  }
}

