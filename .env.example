# Sportsblock Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================
# Google OAuth (NextAuth)
# ============================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
NEXTAUTH_SECRET=
NEXTAUTH_URL=http://localhost:3000

# ============================================
# Upstash Redis (Required for production)
# Get these from https://console.upstash.com
# ============================================
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Alternative: Standard Redis URL (for development)
# REDIS_URL=redis://localhost:6379

# ============================================
# Hive Blockchain Configuration (Optional)
# ============================================
# Primary Hive node URL (default: https://api.hive.blog)
HIVE_NODE_URL=https://api.hive.blog

# Testnet URL (default: https://testnet.openhive.network)
HIVE_NODE_URL_TESTNET=https://testnet.openhive.network

# Image upload service account (for uploading to images.hive.blog)
# Uses this account's posting key to sign image uploads server-side
HIVE_IMAGE_UPLOAD_ACCOUNT=
HIVE_IMAGE_UPLOAD_KEY=

# ============================================
# WorkerBee Configuration (Optional)
# ============================================
# Enable WorkerBee (default: false)
WORKERBEE_ENABLED=true

# Debug mode (default: false)
WORKERBEE_DEBUG=false
NEXT_PUBLIC_WORKERBEE_DEBUG=false

# Timeout in milliseconds (default: 30000)
WORKERBEE_TIMEOUT=30000

# Retry attempts (default: 3)
WORKERBEE_RETRY_ATTEMPTS=3

# Retry delay in milliseconds (default: 1000)
WORKERBEE_RETRY_DELAY=1000

# ============================================
# Wax Configuration (Optional)
# ============================================
# Enable Wax (default: false)
WAX_ENABLED=true

# Debug mode (default: false)
WAX_DEBUG=false

# Timeout in milliseconds (default: 30000)
WAX_TIMEOUT=30000

# ============================================
# Session Security (Required for production)
# ============================================
# Secret key for encrypting session cookies (min 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=

# ============================================
# Sentry Error Tracking (Optional but recommended)
# Get these from https://sentry.io
# ============================================
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=

# ============================================
# Cron Jobs (Required for scheduled tasks)
# ============================================
# Secret for authenticating cron job requests
CRON_SECRET=

# ============================================
# Sports Data API (TheSportsDB)
# Get your free API key from https://www.thesportsdb.com/api.php
# ============================================
THESPORTSDB_API_KEY=

# ============================================
# Google AdSense (Optional - for in-feed ads)
# ============================================
NEXT_PUBLIC_GOOGLE_ADSENSE_ID=
NEXT_PUBLIC_ADSENSE_IN_FEED_SLOT=5925855181

# ============================================
# Debug Flags (Development only)
# ============================================
NEXT_PUBLIC_NOTIFICATIONS_DEBUG=false

# ============================================
# Database (Supabase PostgreSQL via Prisma)
# ============================================
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
DATABASE_POOL_MAX=10

# ============================================
# Hive Account Creation (Onboarding)
# ============================================
ACCOUNT_CREATOR=niallon11
OPERATIONS_ACTIVE_KEY=
# RC delegation uses ACCOUNT_CREATOR + OPERATIONS_ACTIVE_KEY (active authority)
KEY_ENCRYPTION_SECRET=
SESSION_ENCRYPTION_SALT=
